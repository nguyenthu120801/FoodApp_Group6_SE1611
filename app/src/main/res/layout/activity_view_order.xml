<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/order_all_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/order_id_text"
                android:textSize="25sp"
                style="@style/orderView"
                android:text="Order Id" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                style="@style/imageOrderView"
                android:src="@drawable/address"
                />
            <TextView
                android:id="@+id/address_text"
                style="@style/orderView"
                android:layout_weight="1"
                android:text="Address" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/imageOrderView"
                android:src="@drawable/wall_clock"
                />
            <TextView
                android:id="@+id/order_date_text"
                style="@style/orderView"
                android:layout_weight="1"
                android:text="Order Date" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ship_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            style="@style/imageOrderView"
            android:src="@drawable/fast_delivery"
            />
        <TextView
            android:id="@+id/ship_date_text"
            style="@style/orderView"
            android:layout_weight="1"
            android:text="Ship Date" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/status_image"
                style="@style/imageOrderView"
                android:src="@drawable/accept"
                />
            <TextView
                android:id="@+id/status_text"
                style="@style/orderView"
                android:layout_weight="1"
                android:text="Status" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>